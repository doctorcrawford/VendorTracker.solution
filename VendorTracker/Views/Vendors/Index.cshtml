@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendors</h1>


<div class="basic">
  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  }
  <h2>Vendor List:</h2>
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Id: @vendor.Name: <span style="font-size:65%">@vendor.Description</span></a></h3>
  }
</div>


<div class="basic">
  <p><a href='/vendors/new'>Add new vendor</a></p>
  <p><a href='/'>Back home</a></p>
</div>